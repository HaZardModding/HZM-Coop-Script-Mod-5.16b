//Show these actors and AI on after cinematic and make patrol enve if conversation has
// not been triggered.
void sendAlisonAndRusselOnPatrolIGM3()
{	
	$triggerHallConversation1.thread( "" );	
	$alison.show();
	$alison.solid();
	$alison.resethead();
	$alison.ai_on();
	$russel.show();
	$russel.solid();
	$russel.resethead();
	$russel.ai_on();
}

