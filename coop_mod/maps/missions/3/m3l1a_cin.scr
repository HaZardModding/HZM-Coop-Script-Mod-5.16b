{
	$cinematicDeadBody.angles('315 210 45');
	$cinematicDeadBody.time( 6 );
	$cinematicDeadBody.moveDown( 16 );
	$cinematicDeadBody.moveNorth( 32 );
	$cinematicDeadBody.moveEast( 128 );
