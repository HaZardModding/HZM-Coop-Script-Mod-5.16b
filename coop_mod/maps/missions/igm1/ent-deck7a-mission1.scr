}

void imodWait()
{
	$lockerDoor2Jurot.onuse( "imodGo" );
	$lockerDoor1Jurot.onuse( "imodGo" );
	$imod.onuse( "imodGo" );
	pause();
}

void imodGo()
{
	$lockerDoor2Jurot.nouse();
	$lockerDoor1Jurot.nouse();
	$imod.nouse();
	$imod.remove();
	
	//trigger( "$secretSpawner_trigger" );
