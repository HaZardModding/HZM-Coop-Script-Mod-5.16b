void coop_turnWatch(entity eActor);
void coop_turnWatch(entity eActor)
{//look in to my Phaser baby, stunning isn't it ?
	if(doesEntityExist(eActor)){
		entity e;
		e = globalCoop_return_playerClosestPreferActive(eActor);
		eActor.headWatch(e,10);
	}
}

